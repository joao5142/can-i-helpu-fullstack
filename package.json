{
  "name": "can-i-help-you",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter web",
    "dev:admin": "turbo run dev --filter admin",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "turbo": "^2.1.1"
  },
  "overrides": {
    "vue": "3.5.13",
    "vue-router": "4.2.5",
    "@vue/devtools-api": "6.6.4"
  }
}
